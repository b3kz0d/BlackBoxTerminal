<Application x:Class="BlackBoxTerminal.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Window/Styles/Metro/WindowStyle.xaml" />
                <ResourceDictionary Source="Controls/Styles/Generic.xaml"/>
                <ResourceDictionary Source="Window/Styles/Metro/CheckBox.xaml" />
                <ResourceDictionary Source="Controls/Styles/Settings.xaml" />
                <ResourceDictionary Source="Controls/Styles/ContextMenu.xaml" />
                <ResourceDictionary Source="Controls/Styles/Output.xaml" />
                <ResourceDictionary Source="Controls/Styles/Input.xaml" />
                <ResourceDictionary Source="Controls/Styles/Device.xaml" />
                <ResourceDictionary Source="Controls/Styles/Rule.xaml" />
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
